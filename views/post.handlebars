<h2>New Post</h2>

<form class="form post-form">
    <div class="form-group">
        <label for="title-post">Title:</label>
        <input class="form-input" type="text" id="title-post" />
    </div>
    <div class="form-group">
        <label for="body-post">Body:</label>
        <input class="form-input" type="text" id="body-post" />
    </div>
    <div class="form-group">
        <label for="userId-post">UserID:</label>
        <input class="form-input" type="text" id="userId-post" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit Post</button>
    </div>
</form>

<script src="./js/post.js"></script>