<div id="title">
  <h1>The Tech Blog</h1>
</div>

{{log post.comments}}
<div id="post-card">
  <header id="post-header">
    <h2>{{post.title}}</h2>

    <p id="posted-by">Posted by
      {{post.user.username}}
      on
      {{format_date post.date_created}}</p>
  </header>
  <p id="post-body">{{post.body}}</p>
</div>

{{#each post.comments as |comment|}}
  <div id="comment-card">
    <p>{{comment.body}}</p>
    <p>- {{comment.user.username}} ---- {{format_date comment.date_created}}</p>
  </div>
{{/each}}

<div class="form-group" id="post-box">
  <label for="body-comment">Comment:</label>
  <textarea name="text" id="body-comment" cols="30" rows="10"></textarea>
</div>
<div class="form-group floating-button-div">
  <a
    data-id="{{post.id}}"
    class="floating-button"
    id="submit-button"
    href="#"
  >Submit comment</a>
</div>

<script src="../../js/comment.js"></script>